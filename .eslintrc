{
    "parser": "babel-eslint",
    "extends": [
        "eslint-config-airbnb"
    ],
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jquery": true,
        "mocha": true
    },
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "import/no-extraneous-dependencies": 0,
        "object-curly-spacing": 0,
        "comma-dangle": 0,
        "react/jsx-indent": [
            2,
            4
        ],
        "react/jsx-indent-props": [
            2,
            4
        ],
        "jsx-a11y/no-static-element-interactions": 0,
        "semi": 0,
        "arrow-parens": 0,
        "linebreak-style": 0,
        "no-plusplus": 0,
        "class-methods-use-this": 0
    },
    "globals": {
        "__PRO__": true,
        "CPAttachment": true,
        "CPNavigationBar": true,
        "CPNotificationCenter": true,
        "CPUtils": true,
        "CPWebView": true
    }
}
